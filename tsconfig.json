{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "compileOnSave": true
}
