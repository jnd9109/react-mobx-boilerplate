{
  "compilerOptions": {
    "module": "es6",
    "target": "es6",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "compileOnSave": true
}
